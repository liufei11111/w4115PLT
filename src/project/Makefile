OBJS = ast.cmo parser.cmo scanner.cmo javagen.cmo angelaZ.cmo  calc.cmo 

TESTS = arith1 arith2 arith3 arith4 \
	fib \
	for1 for2 \
	func1 func2 func3 func4 func5 \
	gcd \
	global1 \
	hello \
	if1 if2	if3 if4 if5 \
	ops1 \
	var1 var2 var3 var4 \
	stmts1 \
	while1

TARFILES = Makefile testall.sh scanner.mll parser.mly \
	ast.ml bytecode.ml  compile.ml execute.ml calc.ml \
	$(TESTS:%=tests/test-%.mc) \
	$(TESTS:%=tests/test-%.out)
angelaZ: $(OBJS)
	ocamlc -g -o angelaZ $(OBJS)
calc : $(OBJS)
	ocamlc -o calc $(OBJS)

.PHONY : test
test : calc testall.sh
	./testall.sh

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -w A -c $<

%.cmi : %.mli
	ocamlc -w A -c $<

calc.tar.gz : $(TARFILES)
	cd .. && tar czf calc/calc.tar.gz $(TARFILES:%=calc/%)

.PHONY : clean
clean :
	rm -f calc parser.ml parser.mli scanner.ml testall.log \
	*.cmo *.cmi *.out *.diff

# Generated by ocamldep *.ml *.mli
ast.cmo: 
ast.cmx: 
calc.cmo: scanner.cmo parser.cmi ast.cmo 
calc.cmx: scanner.cmx parser.cmx ast.cmx 
parser.cmo: ast.cmo parser.cmi 
parser.cmx: ast.cmx parser.cmi 
scanner.cmo: parser.cmi 
scanner.cmx: parser.cmx 
parser.cmi: ast.cmo 
javagen.cmo : ast.cmo
javagen.cmx : ast.cmx
pc.cmo : scanner.cmo  parser.cmi javagen.cmo ast.cmo 
pc.cmx : scanner.cmx  parser.cmx javagen.cmx ast.cmx 
